FoamFile
{
    format          ascii;
    class           dictionary;
    location        "system";
    object          sample;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs            ("libsampling.so");

interpolationScheme cellPoint;

setFormat raw;

start           (0 0 0);
end             (20 0 0);

fields          (T U p O2);

axis            x; // The independent variable of the graph. Can be "x",
                          // "y", "z", "xyz" (all coordinates written out), or
                          // "distance" (from the start point).

sets
{
    line
    {
        type            lineCell;
        axis            $axis;
        start           $start;
        end             $end;
    }
}

