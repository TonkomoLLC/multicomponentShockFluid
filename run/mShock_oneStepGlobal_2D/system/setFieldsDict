FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultValues
{
    p       1e5;
    T       300;
}

high 1e5;
low -1e5;

zones
{
    hotSpot
    {
        type        box;
        zoneType    cell;

        // box (0 $low $low) (1 $high $high);
        box (0 $low $low) (0.2 0 $high);

        values
        {
            p 2.6e5; 
            T 780;
        }
    }
}


