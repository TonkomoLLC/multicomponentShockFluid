FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    left
    {
        type            zeroGradient;
    }
    right
    {
        type            waveTransmissive;
        gamma           1.4;
        fieldInf        300;
        lInf            1000;
        value           nonuniform List<scalar> 0();
    }
    wallsY
    {
        type            zeroGradient;
    }
    wallsZ
    {
        type            empty;
    }
    procBoundary1to0
    {
        type            processor;
        value           uniform 300;
    }
    procBoundary1to2
    {
        type            processor;
        value           uniform 300;
    }
}


